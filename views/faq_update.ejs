        <title>Update Faq</title>
    </head>
    <body>
        <div class="content">
            <div class="main" style="margin: 20px !important">
                <h1 style="margin-bottom: 0px !important">
                    <strong>Update FAQ</strong>
                </h1>
                <form
                    class="needs-validation"
                    action="/faq_update/<%= faq.id %>"
                    method="POST"
                >
                    <div class="form-group">
                        <label class="form-label" for="pergunta">Pergunta:</label>
                        <input
                            class="form-control"
                            id="pergunta"
                            type="name"
                            name="Pergunta"
                            placeholder="Pergunta a fazer"
                            <% if(faq.Pergunta != undefined){ %>
                                value="<%= faq.Pergunta %>"
                            <% } %>
                        />
                    </div>
                    <div class="form-group was-validated">
                        <label class="form-label" for="resposta"
                            >Resposta:</label
                        >
                        <input
                            class="form-control"
                            id="resposta"
                            type="name"
                            name="Resposta"
                            placeholder="Uma pergunta pertinente"
                            value="<%= faq.Resposta %>"
                            required
                        />
                        <div class="invalid-feedback" style="font-weight: bold">
                            *Please enter your response
                        </div>
                    </div>
                    <div class="form-group was-validated">
                        <label for="validationCustom04" class="form-label"
                            >Categoria:</label
                        >
                        <select
                            style="
                                position: relative;
                                right: 5px;
                                padding: 7px;
                                margin-top: 0px;
                            "
                            id="validationCustom04"
                            type="name"
                            name="Categoria"
                        >
                            <option selected style= "font-weight: lighter"> <%= faq.Categoria %>
                            </option>
                            <% if( faq.Categoria != "Enviar" ) {%>
                            <option style="font-weight: lighter">Enviar</option>
                            <% } %>
                            <% if( faq.Categoria != "Receber" ) {%>
                            <option style="font-weight: lighter">
                                Receber
                            </option>
                            <% } %>
                            <% if( faq.Categoria != "Pagamentos e Portagens" ) {%>
                            <option style="font-weight: lighter">
                                Pagamentos e Portagens
                            </option>
                            <% } %>
                            <% if( faq.Categoria != "Transferência de dinheiro" ) {%>
                            <option style="font-weight: lighter">
                                Transferência de dinheiro
                            </option>
                            <% } %>
                            <% if( faq.Categoria != "Importações e desenfandegamento" ) {%>
                            <option style="font-weight: lighter">
                                Importações e desenfandegamento
                            </option>
                            <% } %>
                        </select>
                    </div>
                    <br>
                    <button
                        class="button-blue"
                        style="margin-top: 0px !important"
                    >
                        SUBMIT
                    </button>
                </form>
            </div>
        </div>
